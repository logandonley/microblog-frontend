@Library('cb-days@master') _
pipeline {
  agent none
  options { 
    buildDiscarder(logRotator(numToKeepStr: '2'))
    skipDefaultCheckout true
    preserveStashes(buildCount: 2)
    //timeout(time: 30, unit: 'MINUTES')
  }
  environment {
    repoOwner = "gregavsyuk"
    repository = "microblog-frontend"
    credId = "microfrontend-git"
    registry = "docker.cb-demos.io"
    gcpProject = "cb-days-workshop"
  }
  stages('VueJS Deploy')
  {
    stage('Deploy'){
      // options {
      //   timeout(time: 90, unit: 'SECONDS') 
      // }
      steps {
        //input(message: "Should we deploy?", ok: "Deploy", submitterParameter: "APPROVER")
        blogKubeDeploy("${repository}", "${repoOwner}", "gcr.io/${gcpProject}/vuejs-app", "cbws.io", "${deployEnv}") {
          unstash "k8s-deploy"
        }
      }
    }  
  }
}
